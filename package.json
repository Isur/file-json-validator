{
  "name": "file-json-validator",
  "version": "0.1.0",
  "description": "Check if files in selected directories has the same structure.",
  "main": "dist/index.js",
  "export": "dist/index.js",
  "types": "dist/indes.d.ts",
  "bin": {
    "fjv": "dist/cli.js"
  },
  "scripts": {
    "dev": "pnpm run build && concurrently \"pnpm run watch-compile\" \"pnpm run watch-dev\"",
    "watch-compile": "swc src -w --out-dir dist",
    "watch-dev": "nodemon --watch \"dist/**/*\" -e js ./dist/index.js ./public/en ./public/pl ./public/ger",
    "build": "swc src -d dist",
    "start": "NODE_ENV=production node dist/index.js",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "prettier --check ./src && eslint ./src --ext .ts --max-warnings=0",
    "lint:fix": "prettier --write ./src && eslint ./src --ext .ts --fix"
  },
  "keywords": [
    "typescript",
    "starter",
    "swc",
    "jest",
    "eslint",
    "prettier",
    "translations",
    "json",
    "validator"
  ],
  "author": "Isur <bednarczykartur96@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@swc/cli": "^0.1.65",
    "@swc/core": "^1.4.12",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "chokidar": "^3.6.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tslib": "^2.6.2",
    "typescript": "^5.4.4"
  },
  "dependencies": {
    "colors": "^1.4.0"
  }
}
