{
  "name": "file-json-validator",
  "version": "0.2.4",
  "description": "Check if files in selected directories has the same structure.",
  "main": "dist/index.js",
  "export": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "fjv": "dist/cli/cli.js"
  },
  "repository": "https://github.com/Isur/file-json-validator",
  "homepage": "https://github.com/Isur/file-json-validator#readme",
  "scripts": {
    "dev": "pnpm run build && concurrently \"tsc -w\" \"tsc-alias -w\" \"nodemon ./dist/index.js\"",
    "dev:cli": "pnpm run build && concurrently \"tsc -w\" \"tsc-alias -w\" \"nodemon ./dist/cli/cli.js dir ./pub/en ./pub/pl ./pub/ger \"",
    "build": "rimraf dist && tsc && tsc-alias",
    "typecheck": "tsc --noEmit",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "prettier --check ./src && eslint ./src --ext .ts --max-warnings=0",
    "lint:fix": "prettier --write ./src && eslint ./src --ext .ts --fix",
    "changeset": "changeset",
    "changeset:release": "changeset version"
  },
  "keywords": [
    "typescript",
    "jest",
    "eslint",
    "prettier",
    "translations",
    "json",
    "validator"
  ],
  "author": "Isur <bednarczykartur96@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "tsc-alias": "^1.8.8",
    "tslib": "^2.6.2",
    "typescript": "^5.4.4"
  },
  "dependencies": {
    "chalk": "^4.1.2"
  }
}
